<div class="hero-unit">
<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @event.name %>
</p>
<p>
  <b>Division:</b>
  <%= @event.group %>
</p>
<p>
  <b>Start:</b>
  <%= @event.start.strftime("%H:%M") %>
</p>

<p>
  <b>Date:</b>
  <%= @event.dayof %>
</p>

<p>
  <b>Description:</b>
  <%= @event.desc %>
</p>

<% if  current_user.admin %>
<%= link_to 'Edit', edit_event_path(@event) %> |

<% end %>
<%= link_to 'Back', events_path %>
</div>
